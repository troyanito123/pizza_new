<div class="m-1">
  <h6 class="text-center"><%= ingredient.name %></h6>
  <%= image_tag ingredient.code + '.jpg', class: 'img-fluid img-thumbnail' %>
  <div id="<%= ingredient.code %>" class="mt-2">
    <%= link_to 'add', add_path(type: ingredient.code), remote: true, method: :post, id: ingredient.code + '-add', class: 'btn btn-primary btn-block' %>
  </div>
</div>

